<p id="mx-dbms-product">
  <table class="mx-defs">
    <tbody>
      <tr>
        <th><%= mx_label_for('dbms_product_name', required: true) %></th>
        <td><%= text_field 'mx_dbms_product', 'name', size: 70, 'v-model' => 'name' %></td>
      </tr>
      <tr>
        <th><%= mx_label_for('dbms_product_type', required: true) %></th>
        <td><%= select 'mx_dbms_product', 'type', MxDbmsProduct::PRODUCT_TYPES.map { |k, v| [v, k] }, { include_blank: true }, 'v-model' => 'type' %></td>
      </tr>
      <tr>
        <th><%= mx_label_for('dbms_product_comment') %></th>
        <td><%= text_area 'mx_dbms_product', 'comment', size: '70x5', 'v-model' => 'comment' %></td>
      </tr>
    </tbody>
  </table>
</p>
<h2 class="mx-section-caption"><%= l('mx.title_data_types') %></h2>
<p id="mx-data-types">
  <table class="mx-grid">
    <thead>
      <tr>
        <th><a v-on="click: addDataType" href="javascript:return false;" title="<%= l(:button_add) %>"><%= image_tag 'add.png' %></a></th>
        <th><%= mx_label_for('data_type_name', required: true) %></th>
        <th><%= mx_label_for('data_type_sizable') %></th>
        <th><%= mx_label_for('data_type_scalable') %></th>
        <th><%= mx_label_for('data_type_use_by_default') %></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr v-repeat="data_type: data_types">
        <% prefix = 'mx_dbms_product[data_types][{{data_type.id}}]' %>
        <td><a v-on="click: duplicateDataType(this)" href="javascript:return false;" title="<%= l(:button_duplicate) %>"><%= image_tag 'duplicate.png' %></a></td>
        <td>
          <input type="hidden" name="<%= prefix %>[id]" v-model="data_type.id" />
          <input type="text" name="<%= prefix %>[name]" v-model="data_type.name" size="40" />
        </td>
        <td class="mx-mark-cell"><input type="checkbox" name="<%= prefix %>[sizable]" value="true" v-model="data_type.sizable"/></td>
        <td class="mx-mark-cell"><input type="checkbox" name="<%= prefix %>[scalable]" value="true" v-model="data_type.scalable"/></td>
        <td class="mx-mark-cell"><input type="checkbox" name="<%= prefix %>[use_by_default]" value="true" v-model="data_type.use_by_default"/></td>
        <td><a v-on="click: removeDataType(this)" href="javascript:return false;" title="<%= l(:button_delete) %>"><%= image_tag 'delete.png' %></a></td>
      </tr>
    </tbody>
  </table>
</p>

